#!/usr/local/bin/node
require.paths.push(__dirname + '/../lib');

var linter = require('jslint-linter');
var overview = require('overview');
var reporter = require('verbose-reporter');
var watchForLint = require('watch-for-lint');

var paths = ["lib/*.js", "test/*.js"];

overview.show(Object.create(linter), paths);

reporter.listenTo(linter);

watchForLint(linter, paths);
